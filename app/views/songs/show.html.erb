<h1><%= @billboard.name %></h1>
<h4>Title: <%= @song.title %></h4>
<h4>Artist: <%= @song.artist %></h4>
<br />

<h2>Comments</h2>
<% @song.comments.each do |comment| %>
  <%= render 'comments/comment', { comment: comment } %>
<% end %>
<br />


<%= link_to 'Add Comment', new_song_comment_path(@song), class: "ui button blue" %>
<br />
<br />

<%= link_to 'Edit Song', edit_billboard_song_path([@billboard, @song]) %> |
<%= link_to 'Delete Song', [@billboard, @song], method: :delete %> |
<%= link_to 'Back To Songs', billboard_songs_path(@billboard) %>